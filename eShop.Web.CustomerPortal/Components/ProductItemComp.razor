<div class="card m-2 p-2" style="width: 12rem;">
    <img src="@Product.ImageLink" class="card-img-top">
    <div class="card-body">
        <a class="card-title" href="@($"/product/{Product.ProductId}")">@Product.Name</a>
        <p class="card-text text-danger">@Product.Price.ToString("c")</p>
    </div>
</div>



@code{
    [Parameter]
    public Product Product { get; set; }
}